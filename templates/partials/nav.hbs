<!-- mob nav -->
<div class="mobNavDiv">
    <div class="mobNav">
        <a href="/" class="mobLinks" id="mobHome">
            <i class="fi fi-rr-home"></i>
        </a>
        <a href="/forecast" class="mobLinks" id="mobForecast">
            <i class="fi fi-rr-clouds-sun"></i>
